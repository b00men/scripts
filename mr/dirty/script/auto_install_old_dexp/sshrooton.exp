#!/usr/bin/expect
if {[llength $argv] != 4} {
   puts "Вызов: sshrooton.exp <hostname> <username> <userpass> <rootpass>"
   exit 1
 }
set hostname [lindex $argv 0]
set username [lindex $argv 1]
set userpass [lindex $argv 2]
set rootpass [lindex $argv 3]
spawn ssh $username@$hostname
expect "password:"
send "$userpass\r"
expect -re "\\$ $"
send "su\r"
expect "Пароль:"
send "$rootpass\r"
expect -re "# $"
send "sed -i \"s/^PermitRootLogin\ without-password$/PermitRootLogin\ yes/\" /etc/ssh/sshd_config\r"
send "mkdir -p /root/.ssh/\r"
send "echo \"ssh-rsa  root@head\" > /root/.ssh/authorized_keys\r"
send "service ssh restart\r"
send "exit\r"
expect -re "\\$ $"
send "logout\r"
expect "closed."
exit 0

